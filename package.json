{
  "name": "@shadowspawn/forest-arborist",
  "version": "10.0.1-0",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowspawn/forest-arborist.git"
  },
  "scripts": {
    "create-playground": "node dist/dev/create-playground",
    "lint": "eslint ./src/**/*.ts ./dev/**/*.ts ./tests/**/*.ts",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "npm-shrinkwrap.json",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.0",
    "shell-quote": "^1.7.2",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^16.11.51",
    "@types/shell-quote": "^1.7.1",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.0.1",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^5.1.6"
  },
  "bugs": {
    "url": "https://github.com/shadowspawn/forest-arborist/issues"
  },
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  },
  "engines": {
    "node": ">= 16"
  }
}
