{
  "name": "@shadowspawn/forest-arborist",
  "version": "8.1.2",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowspawn/forest-arborist.git"
  },
  "scripts": {
    "create-playground": "node dist/dev/create-playground",
    "lint": "eslint ./src/**/*.ts ./dev/**/*.ts ./tests/**/*.ts",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "npm-shrinkwrap.json",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "fs-extra": "^10.0.0",
    "shell-quote": "^1.7.2",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.27",
    "@types/shell-quote": "^1.7.1",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "jest": "^27.3.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "bugs": {
    "url": "https://github.com/shadowspawn/forest-arborist/issues"
  },
  "optionalDependencies": {},
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  },
  "engines": {
    "node": ">= 12"
  }
}
