{
  "name": "@shadowspawn/forest-arborist",
  "version": "13.0.0-3",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowspawn/forest-arborist.git"
  },
  "scripts": {
    "check": "npm run check:lint && npm run check:format",
    "check:format": "prettier --check .",
    "create-playground": "node dist/dev/create-playground",
    "check:lint": "eslint .",
    "fix": "npm run fix:lint && npm run fix:format",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "npm-shrinkwrap.json",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.1.0",
    "shell-quote": "^1.7.2",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^20.16.5",
    "@types/shell-quote": "^1.7.1",
    "@types/tmp": "^0.2.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.3.1",
    "prettier": "^3.3.2",
    "ts-jest": "^29.0.3",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.4.0"
  },
  "bugs": {
    "url": "https://github.com/shadowspawn/forest-arborist/issues"
  },
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  },
  "engines": {
    "node": ">= 18"
  }
}
